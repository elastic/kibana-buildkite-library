{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2019",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": ["es2020"]
  },
  "exclude": ["**/*.test.ts", "**/vm-filesystem/**", "**/dist", "**/types"]
}
